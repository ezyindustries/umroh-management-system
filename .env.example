# Application
NODE_ENV=development
PORT=5000
APP_NAME="Umroh Management System"
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:8888

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=umroh_management
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_SSL=false

# Database Read Replica (optional)
DB_READONLY_HOST=
DB_READONLY_USER=
DB_READONLY_PASSWORD=

# Security
JWT_SECRET=your_super_secret_jwt_key_change_this
JWT_EXPIRE=7d
BCRYPT_ROUNDS=10

# Redis Cache (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM="Umroh Management <noreply@umroh.com>"

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# External APIs (optional)
WHATSAPP_API_URL=
WHATSAPP_API_KEY=
SMS_GATEWAY_URL=
SMS_GATEWAY_KEY=

# Monitoring (optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=